<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".User.pet.PetProfile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_birth"
                android:layout_width="wrap_content"
                android:layout_height="35dp"

                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="Date of birth:"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_name"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="wrap_content"
                android:layout_height="35dp"

                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:text="NAME:"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_pic"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView_Weight"
                android:layout_width="wrap_content"
                android:layout_height="35dp"

                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="WEIGHT:"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_sex"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView_pic"
                android:layout_width="wrap_content"
                android:layout_height="35dp"

                android:layout_marginStart="12dp"
                android:layout_marginTop="48dp"
                android:text="PICTURE:"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/pet_name"
                android:layout_width="224dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textAlignment="textStart"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintStart_toEndOf="@+id/textView_name"
                app:layout_constraintTop_toBottomOf="@+id/textView_pic"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/pet_birth"
                android:layout_width="224dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textAlignment="textStart"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintStart_toEndOf="@id/textView_birth"
                app:layout_constraintTop_toBottomOf="@+id/pet_name"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_140sdp"
                android:text="Pet'S PROFILE"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView_sex"
                android:layout_width="wrap_content"
                android:layout_height="35dp"

                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="sex:"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_birth"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView_MEDICATION"
                android:layout_width="wrap_content"
                android:layout_height="35dp"

                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="MEDICATION"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_DISEASES"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pet_weight"
                android:layout_width="224dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="@dimen/_10sdp"

                android:textAlignment="textStart"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintStart_toEndOf="@+id/textView_Weight"
                app:layout_constraintTop_toBottomOf="@+id/pet_sex"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView_DISEASES"
                android:layout_width="wrap_content"
                android:layout_height="35dp"

                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="DISEASES:"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_Weight"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pet_sex"
                android:layout_width="224dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textAlignment="textStart"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintStart_toEndOf="@+id/textView_sex"
                app:layout_constraintTop_toBottomOf="@+id/pet_birth"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/pet_diseases"
                android:layout_width="224dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="@dimen/_10sdp"

                android:textAlignment="textStart"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintStart_toEndOf="@+id/textView_DISEASES"
                app:layout_constraintTop_toBottomOf="@+id/pet_weight"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pet_MEDICATION"
                android:layout_width="224dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textAlignment="textStart"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintStart_toEndOf="@+id/textView_MEDICATION"
                app:layout_constraintTop_toBottomOf="@+id/pet_diseases"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button_edit"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/border_btn"
                android:backgroundTint="#d5defd"
                android:text="Edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/border_btn"
                android:backgroundTint="#d5defd"
                android:text="delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="65dp"
                android:layout_height="52dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toEndOf="@+id/textView_pic"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:srcCompat="@android:drawable/ic_menu_camera" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>